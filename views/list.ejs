          </form>
            <% }); %>



    <form  class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="Newitem" autocomplete="off">
      <button type="submit" name="submit" value="<%= listTitle %>">+</button>

    </form>


    </div>


  </body>
